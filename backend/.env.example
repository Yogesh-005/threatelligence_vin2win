# backend/.env.example

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_HOST=localhost
DB_NAME=rss_aggregator
DB_USER=postgres
DB_PASS=yoyo
DB_PORT=5432
DATABASE_URL=postgresql://postgres:yoyo@localhost:5432/rss_aggregator

# ============================================================================
# RSS FEED CONFIGURATION
# ============================================================================
FETCH_TIME=08:00
RSS_FETCH_LIMIT=20
RSS_TIMEOUT=30

# ============================================================================
# IOC PROCESSING CONFIGURATION
# ============================================================================
IOC_EXTRACTION_ENABLED=true
IOC_ENRICHMENT_ENABLED=true
IOC_PROCESSING_BATCH_SIZE=100

# Risk scoring thresholds
RISK_THRESHOLD_LOW=25
RISK_THRESHOLD_MEDIUM=50
RISK_THRESHOLD_HIGH=75

# ============================================================================
# THREAT INTELLIGENCE APIs
# ============================================================================
# AbuseIPDB for IP reputation (optional)
ABUSEDB_API_KEY=9e1da814d5cd7c72c8c2611f7edcc42da23f45573dd1eb0fd3c75435295184cd22926f08e58b4f00
ABUSEDB_API_URL=https://api.abuseipdb.com/api/v2

# VirusTotal for multi-indicator analysis (optional)
VIRUSTOTAL_API_KEY=fcf28bf158b1b3688f5b7bb0ab9dc5866aaf0157b8bb0a7e3d866c967dcc3b21
VIRUSTOTAL_API_URL=https://www.virustotal.com/vtapi/v2

# Custom threat intel feeds (optional)
# CUSTOM_THREAT_FEED_URL=https://your-threat-feed.com/api
# CUSTOM_THREAT_FEED_KEY=your_custom_feed_key

# ============================================================================
# AI SUMMARIZATION CONFIGURATION
# ============================================================================
# OpenRouter API for AI summarization
OPENROUTER_API_KEY=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
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# AI model configuration
AI_MODEL=openai/gpt-3.5-turbo
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.3
AI_TIMEOUT=30

# Summarization settings
SUMMARIZATION_ENABLED=true
SUMMARY_CACHE_TTL_HOURS=24
AUTO_SUMMARIZE_THRESHOLD=1  # Min IOCs to trigger auto-summarization

# ============================================================================
# PROCESSING SETTINGS
# ============================================================================
# Enable/disable features
ENABLE_IOC_EXTRACTION=true
ENABLE_IOC_ENRICHMENT=true
ENABLE_AI_SUMMARIZATION=true
ENABLE_BACKGROUND_PROCESSING=true

# Performance settings
WORKER_THREADS=4
BATCH_PROCESSING_SIZE=50
API_RATE_LIMIT=100  # requests per minute

# Cache settings
CACHE_PROVIDER=memory  # Options: memory, redis
CACHE_TTL_SECONDS=3600
REDIS_URL=redis://localhost:6379/0  # if using Redis

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/rss_aggregator.log
ENABLE_STRUCTURED_LOGGING=true

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# API Security (if implementing authentication)
JWT_SECRET_KEY=your_super_secret_jwt_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]
CORS_ALLOW_CREDENTIALS=true

# # ============================================================================
# # MONITORING AND ALERTING (Optional)
# # ============================================================================
# # Slack notifications for high-risk IOCs
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# SLACK_CHANNEL=#security-alerts
# ENABLE_SLACK_ALERTS=false

# # Email notifications
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_email_password
# ENABLE_EMAIL_ALERTS=false

# # High-risk IOC alert threshold
# ALERT_RISK_THRESHOLD=75
# ALERT_IOC_COUNT_THRESHOLD=5

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================
DEBUG=false
DEVELOPMENT_MODE=false
ENABLE_API_DOCS=true
API_DOCS_URL=/docs

# Testing settings
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/rss_aggregator_test
PYTEST_OPTIONS="-v --tb=short"

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_ADVANCED_IOC_ANALYSIS=true
FEATURE_MACHINE_LEARNING_SCORING=false
FEATURE_CUSTOM_RULES_ENGINE=false
FEATURE_EXPORT_CAPABILITIES=true
FEATURE_API_WEBHOOKS=false